    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="LogoChange">
        <item name="android:src">@drawable/ytbdark</item>
    </style>

    <style name="PopupMenuDark" parent="Widget.AppCompat.PopupMenu">
