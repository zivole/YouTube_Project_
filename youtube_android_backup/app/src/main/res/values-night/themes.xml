<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ytb" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">@color/darkGrey</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/red</item>
    </style>
    <style name="Theme.Ytb_homepage" parent="Base.Theme.Ytb"/>
    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="searchViewStyle">@style/DarkSearchView</item>
    </style>
    <style name="ThemeOverlay.AppCompat.Light.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/darkGrey</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="DarkSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/search_text_color_dark</item>
        <item name="android:src">
            @drawable/baseline_search_dark
        </item>
    </style>


    <!-- Dark mode -->
    <style name="ScreenBackground">
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="addBtn">
        <item name="android:background">
            @color/red
        </item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/white</item>
